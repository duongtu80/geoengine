<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="true" />
    <constant name="struts.devMode" value="true" />
    <constant name="struts.action.extension" value="do" />
    
    <package name="default" extends="struts-default" namespace="/">
    	<action name="map" class="mapMap">
    		<result>/map.jsp</result>
    	</action>
    	<action name="chart" class="mapChart">
    		<result>/chart.jsp</result>
    		<result name="notfound">/chartNo.jsp</result>
    	</action>
    	<action name="chartImage" class="chartImage2">
    		<result type="stream">
    			<param name="contentType">image/png</param>
    			<param name="inputName">stream</param>
    			<param name="contentDisposition">filename="chart.png"</param>
  				<param name="bufferSize">1024</param>
    		</result>
    	</action>
    	<action name="chartWaterTable" class="chartWaterTable">
    		<result type="stream">
    			<param name="contentType">image/png</param>
    			<param name="inputName">stream</param>
    			<param name="contentDisposition">filename="chart.png"</param>
  				<param name="bufferSize">1024</param>
    		</result>
    	</action>
